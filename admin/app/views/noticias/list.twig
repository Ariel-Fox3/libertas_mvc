{{ header }}

<div class="card">
  <div class="card-header d-flex justify-content-between">
    Gerenciar notícias
    <a href="{{ add }}" class="btn btn-labeled btn-success">
      <span class="btn-label"><i class="fas fa-plus"></i></span>
      Adicionar nova notícia
    </a>
  </div>
  <div class="card-body">    
    <table class="table table-striped table-bordered table-hover" id="tabela-mod">
      <thead>
        <tr>
          <th class="text-center">Nome</th>
          <th class="text-center">Data para exibição</th>
          <th class="text-center">Ativo</th>
          <th class="text-center">Opções</th>
        </tr>
      </thead>
      <tbody>
        {% if noticias is defined %}
          {% for noticia in noticias %}
            <tr class="gradeU" id="%s">
              <td class="text-center">{{ noticia.nome }}</td>
              <td class="text-center">{{ noticia.data }}</td>
              <td class="text-center">
                <i class="fas fa-{{ noticia.ativo == 1 ? 'check' : 'times' }}"></i>
              </td>
              <td class="text-center">
                <a href="{{ edit }}&id={{ noticia.idnoticia }}" class="btn btn-dark" data-toggle="tooltip" title="Editar notícia"><i class="fas fa-pencil-alt"></i></a>
                <a href="#" class="btn btn-{{ noticia.ativo == 1 ? 'warning' : 'success' }} desativaUsuario" data-id="{{ noticia.idnoticia }}" data-toggle="tooltip" title="Desativar notícia"><i class="fas fa-{{ noticia.ativo == 1 ? 'times' : 'check' }}"></i></a>
                <a href="javascript:;" class="btn btn-danger removeUsuario" data-id="{{ noticia.idnoticia }}" data-toggle="tooltip" title="Remover notícia"><i class="fas fa-trash"></i></a>
              </td>
            </tr>
          {% endfor %}
        {% endif %}
      
      </tbody>
    </table>
  </div>
</div>

{{ footer }}